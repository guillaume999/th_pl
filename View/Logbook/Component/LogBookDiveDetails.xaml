<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="th_pl.View.Logbook.Component.LogBookDiveDetails"
             Title="LogBookDiveDetails"
             xmlns:viewModels="clr-namespace:th_pl.ViewModel">

    <ContentPage.BindingContext>
        <viewModels:LogBookListViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Label 
            Text="{Binding CurrentDive.Duree}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding CurrentDive.Moniteur}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>