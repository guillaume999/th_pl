<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="th_pl.View.Logbook.Component.LogBookDiveDetails"
             Title="LogBookDiveDetails">
    
    <StackLayout>
        <Label 
            Text="{Binding CurrentDive.DivespotLocalisation}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            BackgroundColor="Beige"/>
        <Label 
            Text="{Binding CurrentDive.Date}"
            VerticalOptions="End" 
            HorizontalOptions="Center"
        BackgroundColor="Beige"/>
        <Label 
            Text="{Binding CurrentDive.ObservedSpecies}"
            VerticalOptions="Start" 
            HorizontalOptions="Center"
            BackgroundColor="Beige"
            />
        
    </StackLayout>
</ContentPage>